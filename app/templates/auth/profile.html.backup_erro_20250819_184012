<!-- JavaScript para funcionalidades dinâmicas -->
<script>
$(document).ready(function() {
    // Carregar estatísticas detalhadas via API
    carregarEstatisticasUsuario();
});

function carregarEstatisticasUsuario() {
    $.get('/auth/api/profile')
        .done(function(response) {
            if (response.success) {
                // Atualizar dados dinâmicos se necessário
                console.log('Estatísticas carregadas:', response.stats);
            }
        })
        .fail(function() {
            console.warn('Erro ao carregar estatísticas do usuário');
        });
}
</script>
{% endblock %}
